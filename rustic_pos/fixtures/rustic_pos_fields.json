[
    {
        "doctype": "Custom Field",
        "name": "POS Profile-rustic_pos_section",
        "dt": "POS Profile",
        "fieldname": "rustic_pos_section",
        "fieldtype": "Section Break",
        "label": "Rustic POS Settings",
        "insert_after": "accounting_dimensions_section",
        "collapsible": 1
    },
    {
        "doctype": "Custom Field",
        "name": "POS Profile-rustic_allow_discount_change",
        "dt": "POS Profile",
        "fieldname": "rustic_allow_discount_change",
        "fieldtype": "Check",
        "label": "Show Discount Controls",
        "insert_after": "rustic_pos_section",
        "default": "1",
        "description": "Show discount input fields in POS"
    },
    {
        "doctype": "Custom Field",
        "name": "POS Profile-rustic_allow_uom_change",
        "dt": "POS Profile",
        "fieldname": "rustic_allow_uom_change",
        "fieldtype": "Check",
        "label": "Show UOM Toggle Buttons",
        "insert_after": "rustic_allow_discount_change",
        "default": "1",
        "description": "Show UOM toggle buttons for items with multiple units"
    },
    {
        "doctype": "Custom Field",
        "name": "POS Profile-rustic_item_view_mode",
        "dt": "POS Profile",
        "fieldname": "rustic_item_view_mode",
        "fieldtype": "Select",
        "label": "Item Display Mode",
        "insert_after": "rustic_allow_uom_change",
        "options": "Grid\nList",
        "default": "Grid",
        "description": "Select how items are displayed in POS: Grid (with images) or List (table view)"
    },
    {
        "doctype": "Custom Field",
        "name": "POS Profile-rustic_hide_loyalty",
        "dt": "POS Profile",
        "fieldname": "rustic_hide_loyalty",
        "fieldtype": "Check",
        "label": "Hide Loyalty Section",
        "insert_after": "rustic_item_view_mode",
        "default": "0",
        "description": "Hide loyalty program and points from POS customer section"
    },
    {
        "doctype": "Custom Field",
        "name": "POS Profile-rustic_hide_item_group",
        "dt": "POS Profile",
        "fieldname": "rustic_hide_item_group",
        "fieldtype": "Check",
        "label": "Hide Item Group Filter",
        "insert_after": "rustic_hide_loyalty",
        "default": "0",
        "description": "Hide item group filter/search box in POS"
    }
]
